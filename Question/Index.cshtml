@model  IEnumerable<OnlineTestPortal.Models.Question>

@{
    ViewBag.Title = "Online Test";
}

<h2>Online Test</h2>

<div class="container">
    <div class="table table-bordered table-responsive table-striped">
        @using (Html.BeginForm("Save", "Question", FormMethod.Post))
        {
            if (Model.Count() == 0)
            { 
              <h1 class="text-primary">No Question is Available....</h1>
            }
            int i=1;
            foreach (var question in Model)
            {

                <div class="row center-block">
                    <div class="row">
                        <div class="col-md-3">@i)@question.Question1</div>
                        <div class="col-md-9"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <ul>

                                @foreach (var answer in question.Answers)
                                {

                                <li>
                                    @Html.RadioButton("Group" + i, answer.AnsID, new { GroupName = "Group" + i })
                                    @answer.Answer1
                                   
                                    
                                </li>
                                   
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                i++;
            }
            <div class="row">
                <div class="col-md-4">
                    <input type="submit" value="Save" class="btn-primary" />
                </div>
            </div>
        }
    </div>
</div>